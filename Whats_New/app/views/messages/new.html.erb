<h1>New Message</h1>

<%= form_with(model: @message) do |form| %>
  <% if @message.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h4>
      <ul>
        <% @message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :chat_id, 'Chat', class: 'form-label' %>
    <%= form.select :chat_id, 
          @chats.collect { |c| ["Chat #{c.id} (From: #{c.sender.email} To: #{c.receiver.email})", c.id] }, 
          { include_blank: true }, 
          class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= form.label :user_id, 'Author', class: 'form-label' %>
    <%= form.select :user_id, 
          @users.collect { |u| [u.email, u.id] }, 
          { include_blank: true }, 
          class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= form.label :body, 'Message Content', class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>

  <%= form.submit 'Send Message', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', messages_path, class: 'btn btn-secondary mt-3' %>