<div class="container">
  <h1 class="my-4">Messages</h1>
  
  <% if can? :create, Message %>
    <%= link_to 'New Message', new_message_path, class: 'btn btn-primary mb-3' %>
  <% end %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Content</th>
        <th>Chat</th>
        <th>Author</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.body %></td>
          <td><%= message.chat.id %></td>
          <td><%= message.user.email %></td>
          <td>
            <%= link_to 'Show', message, class: 'btn btn-sm btn-info' %>
            <% if can? :update, message %>
              <%= link_to 'Edit', edit_message_path(message), class: 'btn btn-sm btn-warning' %>
            <% end %>
            <% if can? :destroy, message %>
              <%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>