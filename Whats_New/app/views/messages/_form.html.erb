<%= form_with(model: message) do |form| %>
  <% if message.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h4>
      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :chat_id, class: 'form-label' %>
    <%= form.select :chat_id, 
          Chat.all.collect { |c| ["Chat #{c.id} (Between #{c.sender.email} and #{c.receiver.email})", c.id] },
          { include_blank: true },
          class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control', rows: 3 %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>