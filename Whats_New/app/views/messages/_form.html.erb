<%= form_with(model: [chat, message]) do |f| %>
  <div class="input-group mb-3">
    <%= f.text_area :body, class: 'form-control', placeholder: 'Type your message...', rows: 1 %>
    <%= f.submit 'Send', class: 'btn btn-primary' %>
  </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :chat_id, class: 'form-label' %>
    <%= f.select :chat_id, 
          Chat.all.collect { |c| ["Chat #{c.id} (Between #{c.sender.email} and #{c.receiver.email})", c.id] },
          { include_blank: true },
          class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control', rows: 3 %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>