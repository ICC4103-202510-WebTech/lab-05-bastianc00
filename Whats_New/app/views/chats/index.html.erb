<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Chats</h1>
  <% if can? :create, Chat %>
    <%= link_to 'New Chat', new_chat_path, class: 'btn btn-success' %>
  <% end %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Sender ID</th>
      <th>Receiver ID</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.sender_id %></td>
        <td><%= chat.receiver_id %></td>
        <td><%= chat.created_at %></td>
        <td>
          <%= link_to 'Show', chat_path(chat), class: 'btn btn-sm btn-info' %>
          <% if can? :edit, chat %>
            <%= link_to 'Edit', edit_chat_path(chat), class: 'btn btn-sm btn-warning' %>
          <% end %>
          <% if can? :destroy, chat %>
            <%= button_to 'Delete Chat', chat_path(chat), 
              method: :delete, 
              form: { 
                class: 'd-inline',
                data: { 
                  turbo_confirm: 'Â¿Are you sure? All messages in this chat will be deleted.' 
                } 
              },
              class: 'btn btn-sm btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>