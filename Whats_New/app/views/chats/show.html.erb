<div class="container">
  <h1 class="my-4">Chat Details</h1>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">
        Between <%= @chat.sender.email %> and <%= @chat.receiver.email %>
      </h5>
      <p class="card-text">
        Created at: <%= @chat.created_at.to_formatted_s(:long) %>
      </p>
    </div>
  </div>

  <h2 class="my-4">Messages</h2>
  <% @chat.messages.each do |message| %>
    <div class="card mb-2">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">
          <%= message.user.email %> at <%= message.created_at.to_formatted_s(:short) %>
        </h6>
        <p class="card-text"><%= message.body %></p>
      </div>
    </div>
  <% end %>

  <% if can? :create, Message %>
    <h3 class="my-4">New Message</h3>
    <%= render 'messages/form', message: @chat.messages.build %>
  <% end %>
</div>