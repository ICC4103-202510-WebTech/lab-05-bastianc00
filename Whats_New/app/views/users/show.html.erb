<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card mt-4">
        <div class="card-body">
          <h2 class="card-title"><%= @user.full_name %></h2>
          <p><strong>Email:</strong> <%= @user.email %></p>
          
          <% if can? :edit, @user %>
            <%= link_to 'Edit Profile', edit_user_path(@user), class: 'btn btn-warning' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>